{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaVersion": 9,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-var": 1,
    "camelcase": ["warn", {"properties": "never"}],
    "brace-style": ["warn", "1tbs", { "allowSingleLine": true }],
    "semi": ["warn", "always"],
    "no-extra-semi": "warn",
    "no-spaced-func": "warn",
    "keyword-spacing": ["warn", {
      "overrides": {
        "if": { "after": false },
        "for": { "after": false },
        "while": { "after": false },
        "switch": { "after": false },
        "catch": { "after": false }
      }
    }],
    "jsx-quotes": ["warn", "prefer-double"],
    "space-before-blocks": "warn",
    "space-before-function-paren": ["warn", {
      "anonymous": "never",
      "named": "never",
      "asyncArrow": "always"
    }],
    "array-bracket-spacing": ["warn", "never"],
    "consistent-this": ["warn", "self", "that"],
    "key-spacing": ["warn", {
      "beforeColon": false,
      "afterColon": true
    }]
  }
}
